@model IEnumerable<Assignment8._2.Controllers.AlbumWithDetail>

@{
    ViewBag.Title = "Albums";
}

<h2>Album List</h2>

<p>
    @Html.ActionLink("Add album", "Create") 
</p>
<table class="table">
    <tr>
        <th>
            <p>Album Name</p>
        </th>
        <th>
            <p>Coordinator who looks after album</p>
        </th>
        <th>
            <p>Album Cover</p>
        </th>
        <th>
            <p>Release date</p>
        </th>
        <th>
            <p>Track count</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coordinator)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" height="125" width="125" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @item.Tracks.Count()
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
