@model IEnumerable<Assignment8._2.Controllers.ArtistWithDetail>

@{
    ViewBag.Title = "Artists";
}

<h2>Artist List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Artist Name or Stage Name</p>
        </th>
        <th>
            <p>Artist Photo</p>
        </th>
        <th>
            <p>Birth or Start date</p>
        </th>
        <th>
            <p>Artist Birth Name (If Applicable)</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img  src="@Html.DisplayFor(modelItem => item.UrlArtist)" height="125" width="125"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthOrStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthName)
        </td>

        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
